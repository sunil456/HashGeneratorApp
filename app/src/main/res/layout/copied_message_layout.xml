<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="32dp">

    <View
        android:id="@+id/messageBackgroundView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/copied"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/messageBackgroundView"
        app:layout_constraintEnd_toEndOf="@+id/messageBackgroundView"
        app:layout_constraintStart_toStartOf="@+id/messageBackgroundView"
        app:layout_constraintTop_toTopOf="@+id/messageBackgroundView" />
</androidx.constraintlayout.widget.ConstraintLayout>